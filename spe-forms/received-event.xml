<form>
  <view>
    <name>SpecimenReceivedEvent</name>
    <caption>Received Event</caption>
    <table>CATISSUE_RECEIVED_EVENT_PARAM</table>
    <primaryKey>IDENTIFIER</primaryKey>

    <row>
      <dropDown>
        <name>quality</name>
        <udn>quality</udn>
        <caption>Quality</caption>
        <column>RECEIVED_QUALITY</column>
        <options>
          <sql>
           select *  from
           (values('Use CP Defaults'))
           union
           (select value from catissue_permissible_value where public_id = '2003994')
          </sql>
        </options>
        <mandatory>true</mandatory>
      </dropDown>
    </row>

    <row>
      <userField>
        <name>user</name>
        <udn>user</udn>
        <caption>User</caption>
        <column>USER_ID</column>
      </userField>
    </row>

    <row>
      <datePicker>
        <name>time</name>
        <udn>time</udn>
        <caption>Date and Time</caption>
        <column>EVENT_TIMESTAMP</column>
        <format>MM-dd-yyyy HH:mm</format>
      </datePicker>
    </row>


    <row>
      <textArea>
        <name>comments</name>
        <udn>comments</udn>
        <caption>Comments</caption>
        <column>COMMENTS</column>
        <height>2</height>
      </textArea>
    </row>
  </view>
</form>
